# Demo environment variables
# Copy this file to .env and adjust as needed

# Simple API key for demo endpoints
API_KEY=demo_key

# Database connection (used by backend)
POSTGRES_USER=integrity
POSTGRES_PASSWORD=integrity
POSTGRES_DB=integrity
DATABASE_URL=postgresql+psycopg2://integrity:integrity@postgres:5432/integrity

# Redis
REDIS_URL=redis://redis:6379/0

# MinIO
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=0
MINIO_BUCKET=integrityplay

# CORS (frontend dev URL)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Paths (used by backend for outputs)
RESULTS_DIR=results
ALERTS_DIR=results/alerts
EVIDENCE_DIR=results/evidence_samples

# Frontend public env (used by Next.js)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_KEY=demo_key

